{
  "src_folders": ["tests"],
  "page_objects_path": ["screens"],
  "selenium": {
    "start_process": false
  },
  "test_settings": {
    "default": {
      "launch_url": "http://localhost:3000",
      "selenium_port": 4444,
      "selenium_host": "localhost",
      "screenshots": {
        "enabled": true,
        "on_failure": true,
        "on_error": true,
        "path": "screenshots"
      },
      "filter": "tests/**/*test.js",
      "desiredCapabilities": {
        "browserName": "chrome",
        "chromeOptions": {
          "w3c": false
        }
      }
    }
  }
}
